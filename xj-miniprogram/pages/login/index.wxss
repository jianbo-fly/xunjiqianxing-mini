/* 登录页面样式 */
.page-login {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, var(--color-bg-gray) 0%, var(--color-bg-card) 100%);
  padding: 0 60rpx;
  box-sizing: border-box;
}

/* 步骤容器 */
.step {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* ========== 步骤一：欢迎页 ========== */
.step-welcome {
  justify-content: center;
  padding-bottom: 200rpx;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 120rpx;
}

.logo {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 32rpx;
}

.app-name {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 16rpx;
}

.app-slogan {
  font-size: 28rpx;
  color: var(--color-text-tertiary);
}

.login-area {
  width: 100%;
}

.btn-login {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 32rpx;
  border: none;
}

.btn-login::after {
  border: none;
}

.btn-wx {
  background: #07c160;
  color: var(--color-text-inverse);
}

.btn-icon {
  margin-right: 16rpx;
  font-size: 36rpx;
}

/* 协议勾选 */
.agreement {
  display: flex;
  align-items: flex-start;
  justify-content: center;
  padding: 20rpx 0;
}

.checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid var(--color-border);
  border-radius: 50%;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: var(--color-text-inverse);
  flex-shrink: 0;
  margin-top: 4rpx;
}

.checkbox.checked {
  background: var(--color-primary);
  border-color: var(--color-primary);
}

.agreement-text {
  font-size: 24rpx;
  color: var(--color-text-tertiary);
  line-height: 1.6;
}

.agreement-text .link {
  color: var(--color-primary);
}

/* ========== 步骤二/三：通用 ========== */
.step-header {
  padding: 80rpx 0 60rpx;
  text-align: center;
}

.step-title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: var(--color-text-primary);
  margin-bottom: 20rpx;
}

.step-desc {
  display: block;
  font-size: 28rpx;
  color: var(--color-text-tertiary);
}

.step-actions {
  margin-top: 60rpx;
}

.btn-primary {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  background: var(--color-primary);
  color: var(--color-text-inverse);
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
}

.btn-primary::after {
  border: none;
}

/* ========== 步骤二：完善信息 ========== */
.profile-form {
  background: var(--color-bg-card);
  border-radius: 24rpx;
  padding: 20rpx 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--color-border-light);
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  width: 140rpx;
  font-size: 30rpx;
  color: var(--color-text-primary);
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  height: 80rpx;
  font-size: 30rpx;
  color: var(--color-text-primary);
}

.avatar-item {
  justify-content: space-between;
}

.avatar-btn {
  display: flex;
  align-items: center;
  background: transparent;
  padding: 0;
  margin: 0;
  line-height: normal;
}

.avatar-btn::after {
  border: none;
}

.avatar-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: var(--color-bg-page);
}

.avatar-tip {
  margin-left: 20rpx;
  font-size: 26rpx;
  color: var(--color-text-tertiary);
}

/* ========== 步骤三：绑定手机号 ========== */
.phone-form {
  margin-top: 20rpx;
}

.btn-phone-wx {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 96rpx;
  background: #07c160;
  color: var(--color-text-inverse);
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  border: none;
  margin-bottom: 40rpx;
}

.btn-phone-wx::after {
  border: none;
}

.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: var(--color-border);
}

.divider-text {
  padding: 0 24rpx;
  font-size: 26rpx;
  color: var(--color-text-tertiary);
}

.phone-form .form-item {
  background: var(--color-bg-gray);
  border-radius: 16rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
  border-bottom: none;
}

.phone-form .form-input {
  height: 96rpx;
}

.code-item {
  position: relative;
}

.btn-code {
  position: absolute;
  right: 16rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  color: var(--color-primary);
  background: transparent;
  border: none;
}

.btn-code::after {
  border: none;
}

.btn-code.disabled {
  color: var(--color-text-tertiary);
}

.phone-form .btn-primary {
  margin-top: 40rpx;
}

.skip-area {
  margin-top: 40rpx;
  text-align: center;
}

.skip-btn {
  font-size: 28rpx;
  color: var(--color-text-tertiary);
  padding: 20rpx 40rpx;
}

/* ========== 底部 ========== */
.footer {
  padding: 40rpx 0;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  text-align: center;
}

.footer-text {
  font-size: 24rpx;
  color: var(--color-text-placeholder);
}
