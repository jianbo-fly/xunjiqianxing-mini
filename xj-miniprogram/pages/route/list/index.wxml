<view class="page-route-list">
  <!-- 搜索栏 -->
  <view class="search-bar">
    <view class="search-bar__input">
      <text class="search-bar__icon">🔍</text>
      <input
        class="search-bar__field"
        placeholder="搜索目的地、线路名称"
        value="{{keyword}}"
        confirm-type="search"
        bindinput="handleSearch"
      />
    </view>
  </view>

  <!-- 筛选栏 -->
  <view class="filter-bar">
    <view class="filter-item {{sortBy === '' ? 'active' : ''}}">
      <text>综合</text>
    </view>
    <view class="filter-item {{sortBy === 'hot' ? 'active' : ''}}">
      <text>热门</text>
    </view>
    <view class="filter-item {{sortBy === 'new' ? 'active' : ''}}">
      <text>最新</text>
    </view>
    <view class="filter-item {{sortBy === 'price' ? 'active' : ''}}">
      <text>价格</text>
    </view>
  </view>

  <!-- 占位提示 -->
  <view class="placeholder">
    <view class="placeholder__icon">🗺️</view>
    <view class="placeholder__title">线路列表开发中</view>
    <view class="placeholder__desc">即将展示精彩线路</view>
    <view class="placeholder__desc">敬请期待...</view>
  </view>
</view>
