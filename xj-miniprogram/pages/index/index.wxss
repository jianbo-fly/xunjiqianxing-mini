.page-index {
  min-height: 100vh;
  background: var(--color-bg-page);
  padding-bottom: calc(var(--tab-bar-height) + 120rpx);
}

/* 顶部栏 */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md) var(--page-padding);
  background: var(--color-bg-card);
}

.top-bar__logo {
  width: 160rpx;
  height: 56rpx;
}

.top-bar__right {
  display: flex;
  align-items: center;
  gap: var(--spacing-lg);
}

.top-bar__points {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.points-value {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-primary);
}

.points-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
}

.top-bar__message {
  position: relative;
  padding: var(--spacing-xs);
}

.message-icon {
  width: 48rpx;
  height: 48rpx;
}

.message-badge {
  position: absolute;
  top: 0;
  right: 0;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: var(--color-error);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-badge text {
  font-size: 20rpx;
  color: var(--color-text-inverse);
  line-height: 1;
}

/* Banner轮播 */
.banner-section {
  padding: var(--spacing-md) var(--page-padding);
}

.banner-swiper {
  height: 320rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--color-primary-light) 0%, #D6E9F8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-md);
}

/* 功能入口 */
.entry-section {
  padding: var(--spacing-lg) var(--page-padding);
  background: var(--color-bg-card);
}

.entry-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-lg) var(--spacing-sm);
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.entry-item--disabled {
  opacity: 0.6;
}

.entry-icon-wrap {
  position: relative;
  margin-bottom: var(--spacing-xs);
}

.entry-icon {
  width: 88rpx;
  height: 88rpx;
}

.entry-tag {
  position: absolute;
  top: -8rpx;
  right: -16rpx;
  padding: 2rpx 8rpx;
  background: var(--color-warning);
  border-radius: var(--radius-xs);
  font-size: 18rpx;
  color: var(--color-text-inverse);
  white-space: nowrap;
  transform: scale(0.9);
}

.entry-name {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
}

/* 区块 */
.section {
  margin-top: var(--section-gap);
  padding: var(--spacing-md) var(--page-padding);
  background: var(--color-bg-card);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.section-more {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

.section-more-icon {
  margin-left: 4rpx;
  font-size: var(--font-size-md);
}

/* 线路列表 */
.route-list {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.route-item {
  width: 100%;
}

.empty-tip {
  padding: var(--spacing-xl) 0;
  text-align: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-sm);
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* 在线客服悬浮按钮 */
.customer-service {
  position: fixed;
  right: var(--page-padding);
  bottom: calc(var(--tab-bar-height) + 40rpx);
  width: 100rpx;
  height: 100rpx;
  background: var(--color-primary);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(24, 144, 255, 0.4);
  z-index: 100;
}

.service-icon {
  width: 44rpx;
  height: 44rpx;
}

.service-text {
  font-size: 20rpx;
  color: var(--color-text-inverse);
  margin-top: 4rpx;
}
