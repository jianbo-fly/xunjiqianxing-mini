.page-index {
  min-height: 100vh;
  background: #f8f6f6;
  padding-bottom: calc(var(--tab-bar-height) + 120rpx);
}

/* ===== 顶部栏 ===== */
.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 32rpx;
  background: var(--color-bg-card);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
  position: sticky;
  top: 0;
  z-index: 10;
}

.top-bar__left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.top-bar__logo {
  width: 64rpx;
  height: 64rpx;
}

.top-bar__title {
  font-size: 36rpx;
  font-weight: var(--font-weight-medium);
  color: #111827;
  letter-spacing: 1rpx;
}

.top-bar__right {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

/* 积分徽章 */
.points-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 18rpx;
  background: #ffedd5;
  border: 2rpx solid #fed7aa;
  border-radius: var(--radius-full);
}

.points-badge__icon {
  width: 24rpx;
  height: 24rpx;
}

.points-badge__text {
  font-size: 24rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-primary);
}

/* 消息通知 */
.notification {
  position: relative;
  padding: 8rpx;
}

.notification__icon {
  width: 32rpx;
  height: 40rpx;
}

.notification__dot {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 16rpx;
  height: 16rpx;
  background: var(--color-error);
  border-radius: 50%;
  border: 2rpx solid #fff;
}

/* ===== 主内容区 ===== */
.main-content {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 48rpx;
}

/* ===== 搜索栏 ===== */
.search-bar {
  display: flex;
  align-items: center;
  background: var(--color-bg-card);
  border-radius: 24rpx;
  padding: 24rpx 32rpx;
  box-shadow: var(--shadow-sm);
  position: relative;
}

.search-bar__icon {
  width: 34rpx;
  height: 34rpx;
  margin-right: 16rpx;
  opacity: 0.5;
}

.search-bar__placeholder {
  font-size: 28rpx;
  color: #9ca3af;
}

/* ===== 轮播图 ===== */
.banner-section {
  position: relative;
}

.banner-swiper {
  height: 358rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 20rpx 30rpx -6rpx rgba(0, 0, 0, 0.1), 0 8rpx 12rpx -8rpx rgba(0, 0, 0, 0.1);
}

.banner-item {
  width: 100%;
  height: 100%;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0));
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 32rpx;
}

.banner-tag-wrap {
  margin-bottom: 16rpx;
}

.banner-tag {
  display: inline-block;
  padding: 4rpx 16rpx;
  background: rgba(249, 128, 6, 0.85);
  border-radius: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(4rpx);
}

.banner-title {
  font-size: 40rpx;
  color: #fff;
  line-height: 1.3;
  font-weight: var(--font-weight-medium);
}

.banner-placeholder {
  background: linear-gradient(135deg, var(--color-primary-light) 0%, #D6E9F8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-md);
}

/* 轮播指示点 */
.banner-dots {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  display: flex;
  gap: 12rpx;
  z-index: 5;
}

.banner-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
}

.banner-dot--active {
  width: 32rpx;
  border-radius: var(--radius-full);
  background: #fff;
}

/* ===== 功能入口 ===== */
.entry-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 32rpx 0;
}

.entry-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.entry-icon-bg {
  width: 96rpx;
  height: 96rpx;
  background: #fff7ed;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.entry-icon {
  width: 44rpx;
  height: 44rpx;
}

.entry-name {
  font-size: 24rpx;
  color: #4b5563;
}

/* ===== 热门路线 ===== */
.hot-routes {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  padding-top: 16rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title-wrap {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.section-title-bar {
  width: 8rpx;
  height: 40rpx;
  background: var(--color-primary);
  border-radius: var(--radius-full);
}

.section-title {
  font-size: 36rpx;
  font-weight: var(--font-weight-medium);
  color: #111827;
}

.section-more {
  display: flex;
  align-items: center;
}

.section-more-text {
  font-size: 24rpx;
  color: #6b7280;
}

.section-more-arrow {
  font-size: 28rpx;
  color: #6b7280;
  margin-left: 4rpx;
}

/* ===== 瀑布流 ===== */
.waterfall {
  display: flex;
  gap: 24rpx;
}

.waterfall__col {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* ===== 路线卡片 ===== */
.route-card {
  background: var(--color-bg-card);
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: var(--shadow-sm);
}

.route-card__image-wrap {
  position: relative;
  width: 100%;
}

.route-card__image {
  width: 100%;
  height: 340rpx;
}

.route-card__location {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 4rpx 16rpx;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(12rpx);
  border-radius: 8rpx;
}

.route-card__location-icon {
  width: 14rpx;
  height: 16rpx;
  opacity: 0.9;
}

.route-card__location-text {
  font-size: 20rpx;
  color: #fff;
}

.route-card__info {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.route-card__title {
  font-size: 28rpx;
  color: #111827;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.route-card__tags {
  display: flex;
  gap: 8rpx;
  flex-wrap: wrap;
}

.route-card__tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-size: 20rpx;
}

.route-card__tag--primary {
  background: #fff7ed;
  color: #ea580c;
}

.route-card__tag--gray {
  background: #f3f4f6;
  color: #4b5563;
}

.route-card__bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.route-card__sales {
  font-size: 20rpx;
  color: #9ca3af;
}

.route-card__price {
  display: flex;
  align-items: baseline;
  gap: 2rpx;
  color: var(--color-primary);
}

.route-card__price-symbol {
  font-size: 24rpx;
  font-weight: var(--font-weight-bold);
}

.route-card__price-value {
  font-size: 36rpx;
  font-weight: var(--font-weight-medium);
}

/* ===== 空状态 ===== */
.empty-tip {
  padding: var(--spacing-xl) 0;
  text-align: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-sm);
}

/* ===== 底部占位 ===== */
.bottom-placeholder {
  height: 120rpx;
}

/* ===== 在线客服悬浮按钮 ===== */
.customer-service {
  position: fixed;
  right: 32rpx;
  bottom: calc(var(--tab-bar-height) + 40rpx);
  width: 92rpx;
  height: 88rpx;
  background: var(--color-bg-card);
  border: 2rpx solid #f3f4f6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 20rpx 30rpx -6rpx rgba(0, 0, 0, 0.1), 0 8rpx 12rpx -8rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
}

.service-icon {
  width: 40rpx;
  height: 36rpx;
}
