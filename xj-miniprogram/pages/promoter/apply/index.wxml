<!--
  推广员申请页
-->
<view class="page-promoter-apply">
  <!-- 顶部介绍 -->
  <view class="apply-header">
    <image class="apply-icon" src="/assets/icons/common/share.png" mode="aspectFit" />
    <view class="apply-title">成为推广员</view>
    <view class="apply-desc">推广好友下单，获得丰厚积分奖励</view>
  </view>

  <!-- 推广员权益 -->
  <view class="section benefits-section">
    <view class="section-title">推广员权益</view>
    <view class="benefit-list">
      <view class="benefit-item">
        <image class="benefit-icon" src="/assets/icons/common/share.png" mode="aspectFit" />
        <view class="benefit-info">
          <view class="benefit-name">专属推广码</view>
          <view class="benefit-desc">生成个人推广码，分享即可绑定关系</view>
        </view>
      </view>
      <view class="benefit-item">
        <image class="benefit-icon" src="/assets/icons/common/star.png" mode="aspectFit" />
        <view class="benefit-info">
          <view class="benefit-name">积分奖励</view>
          <view class="benefit-desc">推广好友下单成功，获得积分奖励</view>
        </view>
      </view>
      <view class="benefit-item">
        <image class="benefit-icon" src="/assets/icons/common/user.png" mode="aspectFit" />
        <view class="benefit-info">
          <view class="benefit-name">推广数据</view>
          <view class="benefit-desc">实时查看推广数据，掌握推广效果</view>
        </view>
      </view>
    </view>
  </view>

  <!-- 申请表单 -->
  <view class="section form-section">
    <view class="section-title">申请信息</view>

    <view class="form-item">
      <text class="form-label">真实姓名</text>
      <input
        class="form-input"
        placeholder="请输入真实姓名"
        value="{{form.realName}}"
        bindinput="handleInput"
        data-field="realName"
      />
    </view>

    <view class="form-item">
      <text class="form-label">手机号码</text>
      <input
        class="form-input"
        placeholder="请输入手机号"
        type="number"
        maxlength="11"
        value="{{form.phone}}"
        bindinput="handleInput"
        data-field="phone"
      />
    </view>

    <view class="form-item form-item-vertical">
      <text class="form-label">申请理由</text>
      <textarea
        class="form-textarea"
        placeholder="请简要描述您的推广资源和优势（选填）"
        maxlength="200"
        value="{{form.reason}}"
        bindinput="handleInput"
        data-field="reason"
      ></textarea>
      <view class="form-count">{{form.reason.length}}/200</view>
    </view>
  </view>

  <!-- 提交按钮 -->
  <view class="submit-section">
    <view
      class="submit-btn {{submitting ? 'disabled' : ''}}"
      bindtap="handleSubmit"
    >
      {{submitting ? '提交中...' : '提交申请'}}
    </view>
    <view class="submit-tip">提交后需审核，审核通过后即可开始推广</view>
  </view>
</view>
