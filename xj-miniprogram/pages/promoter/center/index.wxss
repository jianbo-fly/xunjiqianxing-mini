/**
 * 推广中心页样式
 */

.page-promoter-center {
  min-height: 100vh;
  background: var(--color-bg-page);
}

.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

/* 头部 */
.center-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-xl) var(--page-padding);
  padding-top: calc(var(--spacing-xl) + 88rpx);
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  background-size: cover;
}

.center-avatar {
  width: var(--avatar-size-lg);
  height: var(--avatar-size-lg);
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: var(--spacing-md);
}

.center-name {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-inverse);
}

.center-id {
  font-size: var(--font-size-sm);
  color: rgba(255, 255, 255, 0.8);
  margin-top: var(--spacing-xs);
}

/* 统计数据 */
.stats-section {
  display: flex;
  align-items: center;
  margin: calc(-1 * var(--spacing-lg)) var(--page-padding) 0;
  padding: var(--spacing-lg) 0;
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-md);
  position: relative;
  z-index: 1;
}

.stats-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stats-value {
  font-size: var(--font-size-xxl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.stats-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  margin-top: var(--spacing-xs);
}

.stats-divider {
  width: 2rpx;
  height: 64rpx;
  background: var(--color-divider);
}

/* 推广码 */
.section {
  margin: var(--spacing-md) var(--page-padding);
  padding: var(--card-padding);
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

.qrcode-wrap {
  display: flex;
  justify-content: center;
  padding: var(--spacing-lg) 0;
}

.qrcode-img {
  width: 360rpx;
  height: 360rpx;
}

.qrcode-placeholder {
  width: 360rpx;
  height: 360rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-gray);
  border-radius: var(--radius-md);
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

.qrcode-tip {
  text-align: center;
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  margin-bottom: var(--spacing-lg);
}

.qrcode-actions {
  display: flex;
  gap: var(--spacing-md);
}

.qrcode-btn {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm);
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.qrcode-btn-primary {
  background: var(--color-primary);
  color: var(--color-text-inverse);
  border-color: var(--color-primary);
}

/* 菜单 */
.menu-section {
  margin: var(--spacing-md) var(--page-padding);
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-md) var(--card-padding);
}

.menu-label {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--color-text-placeholder);
}
