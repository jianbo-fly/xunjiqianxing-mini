/**
 * 订单详情页样式
 */

.page-order-detail {
  min-height: 100vh;
  background: var(--color-bg-page);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid var(--color-divider);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: var(--spacing-md);
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

/* 订单状态区 */
.status-section {
  padding: var(--spacing-xl) var(--spacing-lg);
  background: linear-gradient(135deg, var(--color-primary), #7c3aed);
  color: #fff;
  text-align: center;
}

.status-section.status-0 {
  background: linear-gradient(135deg, #fa8c16, #faad14);
}

.status-section.status-5,
.status-section.status-8 {
  background: linear-gradient(135deg, #8c8c8c, #bfbfbf);
}

.status-section.status-6,
.status-section.status-7 {
  background: linear-gradient(135deg, #1890ff, #69c0ff);
}

.status-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-sm);
}

.status-text {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  margin-bottom: var(--spacing-xs);
}

.status-tip {
  font-size: var(--font-size-sm);
  opacity: 0.9;
}

.countdown {
  margin-top: var(--spacing-md);
  font-size: var(--font-size-sm);
}

.countdown-time {
  font-weight: var(--font-weight-semibold);
  font-size: var(--font-size-md);
}

/* 通用区块样式 */
.section {
  background: var(--color-bg-card);
  margin: var(--spacing-md);
  border-radius: var(--radius-lg);
  padding: var(--spacing-md);
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
  padding-bottom: var(--spacing-sm);
  border-bottom: 2rpx solid var(--color-divider);
}

/* 商品信息 */
.product-section {
  display: flex;
  align-items: center;
}

.product-image {
  width: 160rpx;
  height: 120rpx;
  border-radius: var(--radius-md);
  flex-shrink: 0;
}

.product-info {
  flex: 1;
  margin-left: var(--spacing-md);
}

.product-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.product-sku {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-top: var(--spacing-xs);
}

.product-date {
  display: flex;
  align-items: center;
  margin-top: var(--spacing-xs);
}

.date-label {
  font-size: var(--font-size-xs);
  color: var(--color-text-tertiary);
  margin-right: var(--spacing-xs);
}

.date-value {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
}

.arrow-icon {
  font-size: var(--font-size-xl);
  color: var(--color-text-tertiary);
  margin-left: var(--spacing-sm);
}

/* 出行人信息 */
.traveler-group {
  margin-bottom: var(--spacing-md);
}

.traveler-group:last-child {
  margin-bottom: 0;
}

.group-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.traveler-item {
  background: var(--color-bg-page);
  border-radius: var(--radius-md);
  padding: var(--spacing-sm) var(--spacing-md);
  margin-bottom: var(--spacing-sm);
}

.traveler-item:last-child {
  margin-bottom: 0;
}

.traveler-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-xs);
}

.traveler-info {
  display: flex;
  font-size: var(--font-size-sm);
  margin-top: var(--spacing-xs);
}

.traveler-info .info-label {
  color: var(--color-text-tertiary);
  width: 100rpx;
}

.traveler-info .info-value {
  color: var(--color-text-secondary);
}

/* 联系人信息 */
.contact-row {
  display: flex;
  justify-content: space-between;
  padding: var(--spacing-sm) 0;
}

.contact-row:first-of-type {
  padding-top: 0;
}

.contact-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

.contact-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
}

/* 价格明细 */
.price-row {
  display: flex;
  justify-content: space-between;
  padding: var(--spacing-xs) 0;
}

.price-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.price-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
}

.price-value.discount {
  color: #52c41a;
}

.price-total {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--spacing-md);
  margin-top: var(--spacing-sm);
  border-top: 2rpx solid var(--color-divider);
}

.total-label {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.total-value {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-price);
}

/* 订单信息 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xs) 0;
}

.order-info-section .info-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  flex-shrink: 0;
}

.order-info-section .info-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.info-value-wrap {
  display: flex;
  align-items: center;
}

.copy-btn {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  margin-left: var(--spacing-sm);
  padding: 4rpx 12rpx;
  border: 2rpx solid var(--color-primary);
  border-radius: var(--radius-sm);
}

/* 底部按钮 */
.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
  background: var(--color-bg-card);
  border-top: 2rpx solid var(--color-divider);
}

.btn {
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: var(--font-size-md);
  border-radius: var(--radius-md);
}

.btn-default {
  background: var(--color-bg-page);
  color: var(--color-text-secondary);
  border: 2rpx solid var(--color-divider);
}

.btn-primary {
  background: var(--color-primary);
  color: #fff;
  min-width: 240rpx;
  text-align: center;
}

/* 底部占位 */
.bottom-placeholder {
  height: calc(120rpx + env(safe-area-inset-bottom));
}
