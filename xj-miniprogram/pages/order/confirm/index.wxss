.page-order-confirm {
  min-height: 100vh;
  background: var(--color-bg-page);
}

/* 加载中 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

/* 主滚动区 */
.main-scroll {
  height: 100vh;
}

/* 区块 */
.section {
  margin-top: var(--section-gap);
  padding: var(--spacing-lg) var(--page-padding);
  background: var(--color-bg-card);
}

.section:first-child {
  margin-top: 0;
}

.section--row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.section-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.section-value {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.section-arrow {
  font-size: var(--font-size-lg);
  color: var(--color-text-tertiary);
}

/* 订单信息卡片 */
.order-info-card {
  margin-top: var(--spacing-md);
  padding: var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-md);
}

.route-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.package-name {
  margin-top: var(--spacing-xs);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.travel-date {
  margin-top: var(--spacing-sm);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.price-detail {
  margin-top: var(--spacing-md);
  padding-top: var(--spacing-md);
  border-top: 1rpx solid var(--color-border);
}

.price-row {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.price-row:last-child {
  margin-bottom: 0;
}

.price-label {
  width: 80rpx;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.price-calc {
  flex: 1;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.price-amount {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  font-weight: var(--font-weight-semibold);
}

/* 出行人 */
.traveler-group {
  margin-top: var(--spacing-md);
}

.traveler-group:first-child {
  margin-top: var(--spacing-sm);
}

.traveler-group-title {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.traveler-card {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
  background: var(--color-bg-gray);
  border-radius: var(--radius-md);
  border: 2rpx solid transparent;
}

.traveler-card:last-child {
  margin-bottom: 0;
}

.traveler-card--empty {
  border: 2rpx dashed var(--color-border);
  background: transparent;
}

.traveler-info {
  flex: 1;
}

.traveler-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.traveler-id,
.traveler-phone {
  margin-top: 4rpx;
  font-size: var(--font-size-xs);
  color: var(--color-text-tertiary);
}

.traveler-action {
  padding: var(--spacing-sm);
}

.action-delete {
  font-size: var(--font-size-sm);
  color: var(--color-error);
}

.traveler-add {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: var(--spacing-sm) 0;
}

.add-icon {
  font-size: var(--font-size-xl);
  color: var(--color-primary);
  margin-right: var(--spacing-xs);
}

.add-text {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
}

/* 联系人 */
.contact-card {
  margin-top: var(--spacing-md);
}

.contact-row {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--color-border);
}

.contact-label {
  width: 100rpx;
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.contact-input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.contact-input[disabled] {
  color: var(--color-text-secondary);
}

.contact-toggle {
  display: flex;
  align-items: center;
  padding-top: var(--spacing-md);
}

.toggle-checkbox {
  width: 36rpx;
  height: 36rpx;
  border: 2rpx solid var(--color-border);
  border-radius: var(--radius-xs);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-sm);
  font-size: 24rpx;
  color: var(--color-text-inverse);
}

.toggle-checkbox--checked {
  background: var(--color-primary);
  border-color: var(--color-primary);
}

.toggle-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

/* 优惠券 */
.coupon-selected {
  font-size: var(--font-size-md);
  color: var(--color-error);
  font-weight: var(--font-weight-semibold);
}

.coupon-available {
  font-size: var(--font-size-sm);
  color: var(--color-primary);
}

.coupon-none {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

.rule-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

/* 金额明细 */
.amount-section {
  margin-bottom: var(--spacing-lg);
}

.amount-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-sm) 0;
}

.amount-label {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.amount-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
}

.amount-value--discount {
  color: var(--color-error);
}

.amount-divider {
  height: 1rpx;
  background: var(--color-border);
  margin: var(--spacing-sm) 0;
}

.amount-row--total .amount-label {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.amount-value--total {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  color: var(--color-error);
}

/* 底部占位 */
.bottom-placeholder {
  height: 140rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--page-padding);
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
  background: var(--color-bg-card);
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.action-bar__left {
  flex: 1;
}

.pay-amount {
  font-size: 44rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-error);
}

.action-bar__right {
  margin-left: var(--spacing-lg);
}

.submit-btn {
  padding: 0 60rpx;
  height: 88rpx;
  background: linear-gradient(135deg, var(--color-primary-dark), var(--color-primary));
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  color: var(--color-text-inverse);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
}

.submit-btn--disabled {
  opacity: 0.6;
}

/* xj-popup 布局覆盖 */
.popup--scroll-footer .xj-popup__container {
  max-height: 70vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.popup--scroll-footer .xj-popup__body {
  padding: 0;
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.popup-scroll {
  flex: 1;
  padding: var(--spacing-md) var(--page-padding);
  overflow-y: auto;
}

.popup-footer {
  padding: var(--spacing-md) var(--page-padding);
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--color-border);
}

/* 出行人选项 */
.traveler-option {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  margin-bottom: var(--spacing-sm);
  background: var(--color-bg-gray);
  border-radius: var(--radius-md);
}

.option-info {
  flex: 1;
}

.option-name {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.option-detail {
  margin-top: 4rpx;
  font-size: var(--font-size-xs);
  color: var(--color-text-tertiary);
}

.option-check {
  padding: 4rpx 12rpx;
  background: var(--color-primary-light);
  color: var(--color-primary);
  font-size: var(--font-size-xs);
  border-radius: var(--radius-xs);
}


/* 表单 */
.form-content {
  padding: var(--spacing-md) var(--page-padding);
}

.form-row {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--color-border);
}

.form-label {
  width: 120rpx;
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.form-input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.form-submit-btn {
  width: 100%;
  height: 88rpx;
  background: var(--color-primary);
  color: var(--color-text-inverse);
  font-size: var(--font-size-md);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 优惠券选项 */
.coupon-item {
  display: flex;
  margin-bottom: var(--spacing-sm);
  background: var(--color-bg-gray);
  border-radius: var(--radius-md);
  overflow: hidden;
  border: 2rpx solid transparent;
}

.coupon-item--active {
  border-color: var(--color-primary);
  background: var(--color-primary-light);
}

.coupon-left {
  width: 180rpx;
  padding: var(--spacing-md);
  background: linear-gradient(135deg, var(--color-error), #ff7875);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.coupon-amount {
  font-size: 40rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-inverse);
}

.coupon-condition {
  font-size: var(--font-size-xs);
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

.coupon-right {
  flex: 1;
  padding: var(--spacing-md);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coupon-name {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
  font-weight: var(--font-weight-semibold);
}

.coupon-expire {
  margin-top: var(--spacing-xs);
  font-size: var(--font-size-xs);
  color: var(--color-text-tertiary);
}

.no-coupon-btn {
  width: 100%;
  height: 88rpx;
  background: var(--color-bg-gray);
  color: var(--color-text-secondary);
  font-size: var(--font-size-md);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 空列表 */
.empty-list {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 200rpx;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-sm);
}
