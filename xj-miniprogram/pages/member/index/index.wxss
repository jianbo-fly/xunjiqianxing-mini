.page-member {
  min-height: 100vh;
  background: var(--color-bg-page);
  padding-bottom: var(--tab-bar-height);
}

/* ===== 头部 ===== */
.header {
  padding: var(--spacing-xl) var(--page-padding);
  padding-top: calc(var(--spacing-xl) + 88rpx);
  padding-bottom: var(--spacing-xxl);
  background: linear-gradient(180deg, #FFF0E0 0%, #FFF8F0 60%, var(--color-bg-page) 100%);
}

.header-actions {
  display: flex;
  justify-content: flex-end;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.header-action-icon {
  width: 44rpx;
  height: 44rpx;
  opacity: 0.6;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar-wrap {
  position: relative;
  width: var(--avatar-size-xl);
  height: var(--avatar-size-xl);
  flex-shrink: 0;
}

.avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-edit {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 36rpx;
  height: 36rpx;
  background: var(--color-text-primary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-edit-icon {
  width: 20rpx;
  height: 20rpx;
}

.user-detail {
  flex: 1;
  margin-left: var(--spacing-lg);
}

.nickname {
  display: block;
  font-size: 40rpx;
  font-weight: var(--font-weight-bold);
  color: var(--color-text-primary);
}

.member-badge {
  display: inline-flex;
  align-items: center;
  margin-top: var(--spacing-sm);
  padding: 4rpx 16rpx;
  background: linear-gradient(135deg, #FFA940 0%, #F98006 100%);
  border-radius: var(--radius-full);
}

.member-badge-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 6rpx;
}

.member-badge-text {
  font-size: var(--font-size-xs);
  color: var(--color-text-inverse);
  font-weight: var(--font-weight-medium);
}

.member-badge-arrow {
  font-size: var(--font-size-xs);
  color: var(--color-text-inverse);
  margin-left: 4rpx;
}

/* ===== 订单区块 ===== */
.order-section {
  margin: 0 var(--page-padding);
  margin-top: calc(-1 * var(--spacing-lg));
  padding: var(--card-padding);
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

.section-more {
  display: flex;
  align-items: center;
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

.section-more .arrow {
  margin-left: 4rpx;
}

.order-tabs {
  display: flex;
  justify-content: space-around;
  padding-top: var(--spacing-sm);
}

.order-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-tab-icon-wrap {
  position: relative;
  padding: var(--spacing-sm);
}

.order-tab-icon {
  width: 56rpx;
  height: 56rpx;
}

.order-badge {
  position: absolute;
  top: 0;
  right: -4rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: var(--color-error);
  color: var(--color-text-inverse);
  font-size: 20rpx;
  font-weight: var(--font-weight-medium);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.order-tab-text {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-top: var(--spacing-xs);
}

/* ===== 功能菜单 ===== */
.menu-section {
  margin: var(--spacing-md) var(--page-padding);
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--card-padding);
}

.menu-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-md);
  flex-shrink: 0;
}

.menu-icon-orange {
  background: var(--color-primary-light);
}

.menu-icon-blue {
  background: #EBF5FF;
}

.menu-icon-green {
  background: #E8F8EF;
}

.menu-icon-purple {
  background: #F0EBFF;
}

.menu-icon-gray {
  background: var(--color-bg-gray);
}

.menu-icon {
  width: 36rpx;
  height: 36rpx;
}

.menu-title {
  flex: 1;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
}

.menu-tag {
  font-size: var(--font-size-xs);
  color: var(--color-primary);
  padding: 4rpx 12rpx;
  background: var(--color-primary-light);
  border-radius: var(--radius-full);
  margin-right: var(--spacing-sm);
}

.menu-arrow {
  font-size: 32rpx;
  color: var(--color-text-placeholder);
}
