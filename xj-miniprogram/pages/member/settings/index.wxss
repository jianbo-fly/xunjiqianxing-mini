/**
 * 设置页样式
 */

.page-settings {
  min-height: 100vh;
  background: var(--color-bg-page);
  padding: var(--spacing-md) var(--page-padding);
}

/* 单项卡片 */
.settings-card {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--card-padding);
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-md);
}

/* 分组卡片 */
.settings-card-group {
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-md);
  overflow: hidden;
}

.settings-card-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--card-padding);
}

.settings-card-item + .settings-card-item {
  border-top: 2rpx solid var(--color-divider);
}

/* 图标容器 */
.settings-icon-wrap {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--spacing-md);
  flex-shrink: 0;
}

.settings-icon-blue {
  background: #EBF5FF;
}

.settings-icon-green {
  background: #E8F8EF;
}

.settings-icon-orange {
  background: var(--color-primary-light);
}

.settings-icon-purple {
  background: #F0EBFF;
}

.settings-icon-gray {
  background: var(--color-bg-gray);
}

.settings-icon {
  width: 36rpx;
  height: 36rpx;
}

/* 文字 */
.settings-label {
  flex: 1;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
}

.settings-value {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  margin-right: var(--spacing-sm);
}

.settings-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
  flex-shrink: 0;
}

/* 退出登录 */
.logout-card {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-lg);
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  box-shadow: var(--shadow-sm);
  margin-bottom: var(--spacing-md);
}

.logout-text {
  font-size: var(--font-size-md);
  color: var(--color-danger);
  font-weight: var(--font-weight-medium);
}

/* 版本号 */
.version-text {
  text-align: center;
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
  padding: var(--spacing-lg) 0;
}
