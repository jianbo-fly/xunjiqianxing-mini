<!--
  设置页
-->
<view class="page-settings">
  <!-- 功能设置 -->
  <view class="settings-group">
    <view class="settings-item" bindtap="handleClearCache">
      <text class="settings-label">清除缓存</text>
      <view class="settings-right">
        <text class="settings-value">{{cacheSize}}</text>
        <text class="settings-arrow">›</text>
      </view>
    </view>
  </view>

  <!-- 关于 -->
  <view class="settings-group">
    <view class="settings-item" bindtap="handleAbout">
      <text class="settings-label">关于我们</text>
      <text class="settings-arrow">›</text>
    </view>
    <view class="settings-item">
      <text class="settings-label">当前版本</text>
      <text class="settings-value">{{version}}</text>
    </view>
    <view class="settings-item" bindtap="handlePrivacy">
      <text class="settings-label">隐私协议</text>
      <text class="settings-arrow">›</text>
    </view>
    <view class="settings-item" bindtap="handleUserAgreement">
      <text class="settings-label">用户协议</text>
      <text class="settings-arrow">›</text>
    </view>
  </view>

  <!-- 退出登录 -->
  <view class="settings-group" wx:if="{{isLogin}}">
    <view class="settings-item logout-item" bindtap="handleLogout">
      <text class="logout-text">退出登录</text>
    </view>
  </view>
</view>
