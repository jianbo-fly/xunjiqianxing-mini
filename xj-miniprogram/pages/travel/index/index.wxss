.page-travel {
  min-height: 100vh;
  background: var(--color-bg-page);
}

/* 顶部导航 */
.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  padding: 0 var(--page-padding);
  padding-bottom: 10rpx;
  background: var(--color-bg-card);
  box-sizing: border-box;
}

.nav-header__left,
.nav-header__right {
  width: 80rpx;
  height: 44px;
  display: flex;
  align-items: center;
}

.nav-header__right {
  justify-content: flex-end;
}

.nav-back-text {
  font-size: 56rpx;
  color: var(--color-text-primary);
  font-weight: 300;
  line-height: 1;
}

.nav-search-icon {
  width: 44rpx;
  height: 44rpx;
}

.nav-header__title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
}

/* 顶部Tab占位 */
.top-tabs-placeholder {
  width: 100%;
}

/* 顶部Tab */
.top-tabs {
  position: fixed;
  left: 0;
  right: 0;
  z-index: 99;
  display: flex;
  background: var(--color-bg-card);
  border-bottom: 1rpx solid var(--color-border);
}

.top-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md) 0;
  font-size: var(--font-size-md);
  color: var(--color-text-secondary);
  position: relative;
}

.top-tab--active {
  color: var(--color-primary);
  font-weight: var(--font-weight-semibold);
}

.top-tab__line {
  position: absolute;
  bottom: 0;
  width: 48rpx;
  height: 6rpx;
  background: var(--color-primary);
  border-radius: 3rpx;
}

/* 内容区 */
.tab-content {
  min-height: calc(100vh - 200px);
}

/* ========== 跟团游 ========== */

/* 二级分类 */
.sub-category {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) var(--page-padding);
  background: var(--color-bg-card);
  gap: var(--spacing-md);
}

.sub-category__item {
  padding: var(--spacing-xs) var(--spacing-lg);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  background: var(--color-bg-gray);
  border-radius: var(--radius-full);
}

.sub-category__item--active {
  color: var(--color-primary);
  background: var(--color-primary-light);
}

.sub-category__filter {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
}

.sub-category__filter image {
  width: 32rpx;
  height: 32rpx;
}

/* 线路列表 */
.route-scroll {
  height: calc(100% - 88rpx);
}

.route-list {
  padding: var(--spacing-md) var(--page-padding);
  display: flex;
  flex-direction: column;
  gap: var(--spacing-md);
}

.loading-tip,
.empty-tip {
  padding: var(--spacing-xl);
  text-align: center;
  color: var(--color-text-tertiary);
  font-size: var(--font-size-sm);
}

/* 筛选弹窗 */
.filter-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 200;
}

.filter-popup {
  position: fixed;
  top: 0;
  right: -80%;
  width: 80%;
  height: 100%;
  background: var(--color-bg-card);
  z-index: 201;
  transition: right 0.3s ease;
  padding: env(safe-area-inset-top) var(--page-padding) var(--page-padding);
  display: flex;
  flex-direction: column;
}

.filter-popup--show {
  right: 0;
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--color-border);
}

.filter-title {
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
}

.filter-reset {
  font-size: var(--font-size-sm);
  color: var(--color-text-tertiary);
}

.filter-item {
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--color-border);
}

.filter-label {
  display: block;
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-sm);
}

.filter-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-sm) var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-sm);
}

.picker-arrow {
  color: var(--color-text-tertiary);
}

.filter-price-range {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.price-input {
  flex: 1;
  height: 72rpx;
  padding: 0 var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-md);
}

.price-separator {
  color: var(--color-text-tertiary);
}

.filter-footer {
  margin-top: auto;
  padding-top: var(--spacing-lg);
}

.filter-btn {
  width: 100%;
  height: 88rpx;
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.filter-btn--confirm {
  background: var(--color-primary);
  color: #FFFFFF;
}

/* ========== 定制游 ========== */

.custom-content {
  background: var(--color-bg-card);
}

.custom-scroll {
  height: 100%;
  padding: var(--spacing-md) var(--page-padding);
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
}

.form-section {
  margin-bottom: var(--spacing-xl);
}

.form-title {
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-md);
}

/* 卡片选择 */
.card-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-sm);
}

.card-grid--5 {
  grid-template-columns: repeat(5, 1fr);
}

.card-item {
  padding: var(--spacing-md) var(--spacing-sm);
  text-align: center;
  background: var(--color-bg-gray);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-sm);
  color: var(--color-text-primary);
  border: 2rpx solid transparent;
}

.card-item--active {
  background: var(--color-primary-light);
  color: var(--color-primary);
  border-color: var(--color-primary);
}

.custom-input {
  margin-top: var(--spacing-sm);
  height: 80rpx;
  padding: 0 var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-md);
}

/* 人数选择 */
.people-row {
  display: flex;
  gap: var(--spacing-xl);
}

.people-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.people-label {
  font-size: var(--font-size-md);
  color: var(--color-text-primary);
}

.people-counter {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.counter-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--color-bg-gray);
  border-radius: 50%;
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
}

.counter-btn--disabled {
  color: var(--color-text-disabled);
}

.counter-value {
  width: 48rpx;
  text-align: center;
  font-size: var(--font-size-md);
  font-weight: var(--font-weight-semibold);
}

/* 需求标签 */
.need-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-sm);
}

.need-tag {
  padding: var(--spacing-xs) var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-full);
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  border: 2rpx solid transparent;
}

.need-tag--active {
  background: var(--color-primary-light);
  color: var(--color-primary);
  border-color: var(--color-primary);
}

.extra-note {
  margin-top: var(--spacing-md);
  width: 100%;
  height: 160rpx;
  padding: var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-md);
  box-sizing: border-box;
}

.phone-input {
  height: 88rpx;
  padding: 0 var(--spacing-md);
  background: var(--color-bg-gray);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-md);
}

/* 提交按钮 */
.submit-area {
  padding: var(--spacing-xl) 0;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: var(--color-primary);
  color: #FFFFFF;
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-semibold);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  opacity: 0.6;
}

/* 成功弹窗 */
.success-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 300;
}

.success-popup {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  background: var(--color-bg-card);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  text-align: center;
  z-index: 301;
}

.success-icon {
  font-size: 96rpx;
  margin-bottom: var(--spacing-md);
}

.success-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-semibold);
  color: var(--color-text-primary);
  margin-bottom: var(--spacing-sm);
}

.success-desc {
  font-size: var(--font-size-sm);
  color: var(--color-text-secondary);
  margin-bottom: var(--spacing-xl);
}

.success-actions {
  display: flex;
  gap: var(--spacing-md);
}

.success-btn {
  flex: 1;
  height: 80rpx;
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
  display: flex;
  align-items: center;
  justify-content: center;
}

.success-btn--secondary {
  background: var(--color-bg-gray);
  color: var(--color-text-primary);
}

.success-btn--primary {
  background: var(--color-primary);
  color: #FFFFFF;
}
