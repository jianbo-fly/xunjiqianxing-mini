/**
 * CSS Variables - CSS变量
 *
 * 基于寻迹千行 UI 设计规范 v3.0
 * 品牌色：活力橙 #F98006
 */

page {
  /* ===== 颜色 - 品牌色 ===== */
  --color-primary: #F98006;
  --color-primary-light: #FFF3E0;
  --color-primary-dark: #E07000;
  --color-primary-gradient: linear-gradient(135deg, #FFA940 0%, #F98006 100%);

  /* ===== 颜色 - 功能色 ===== */
  --color-success: #27AE60;
  --color-success-light: #F0FFF4;
  --color-warning: #FAA014;
  --color-warning-light: #FFFBE6;
  --color-error: #E74C3C;
  --color-error-light: #FFF2F0;
  --color-danger: #E74C3C;
  --color-info: #3B82F6;
  --color-price: #F98006;

  /* ===== 颜色 - 状态文字 ===== */
  --color-text-disabled: #C0C4CC;

  /* ===== 颜色 - 文字 ===== */
  --color-text-primary: #1C1440;
  --color-text-secondary: #6B7280;
  --color-text-tertiary: #9CA3AF;
  --color-text-placeholder: #C0C4CC;
  --color-text-inverse: #FFFFFF;

  /* ===== 颜色 - 背景 ===== */
  --color-bg-page: #F5F5F5;
  --color-bg-card: #FFFFFF;
  --color-bg-gray: #F9FAFB;
  --color-bg-mask: rgba(0,0,0,0.5);
  --color-bg-warm: linear-gradient(180deg, #FFF5EB 0%, #F5F5F5 100%);

  /* ===== 颜色 - 边框 ===== */
  --color-border: #E5E7EB;
  --color-border-light: #F3F4F6;
  --color-divider: #F3F4F6;

  /* ===== 字体 - 字号 ===== */
  --font-size-xs: 20rpx;
  --font-size-sm: 24rpx;
  --font-size-md: 28rpx;
  --font-size-lg: 32rpx;
  --font-size-xl: 36rpx;
  --font-size-xxl: 44rpx;
  --font-size-price: 40rpx;

  /* ===== 字体 - 字重 ===== */
  --font-weight-normal: 400;
  --font-weight-medium: 500;
  --font-weight-semibold: 600;
  --font-weight-bold: 700;

  /* ===== 字体 - 行高 ===== */
  --line-height-tight: 1.2;
  --line-height-normal: 1.5;
  --line-height-loose: 1.8;

  /* ===== 间距 ===== */
  --spacing-xs: 8rpx;
  --spacing-sm: 16rpx;
  --spacing-md: 24rpx;
  --spacing-lg: 32rpx;
  --spacing-xl: 48rpx;
  --spacing-xxl: 64rpx;

  /* ===== 间距 - 页面 ===== */
  --page-padding: 32rpx;
  --card-padding: 24rpx;
  --section-gap: 24rpx;

  /* ===== 圆角 ===== */
  --radius-none: 0;
  --radius-xs: 4rpx;
  --radius-sm: 8rpx;
  --radius-md: 16rpx;
  --radius-lg: 24rpx;
  --radius-xl: 32rpx;
  --radius-full: 9999rpx;

  /* ===== 阴影（柔和风格） ===== */
  --shadow-none: none;
  --shadow-sm: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  --shadow-md: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  --shadow-lg: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
  --shadow-xl: 0 16rpx 48rpx rgba(0, 0, 0, 0.12);

  /* ===== 动画 ===== */
  --duration-fast: 150ms;
  --duration-normal: 300ms;
  --duration-slow: 500ms;

  /* ===== 层级 ===== */
  --z-index-default: 1;
  --z-index-dropdown: 100;
  --z-index-sticky: 200;
  --z-index-fixed: 300;
  --z-index-modal-backdrop: 400;
  --z-index-modal: 500;
  --z-index-popover: 600;
  --z-index-tooltip: 700;
  --z-index-toast: 800;

  /* ===== 组件尺寸 - 按钮 ===== */
  --button-height-sm: 56rpx;
  --button-height-md: 72rpx;
  --button-height-lg: 88rpx;

  /* ===== 组件尺寸 - 输入框 ===== */
  --input-height: 88rpx;

  /* ===== 组件尺寸 - 头像 ===== */
  --avatar-size-sm: 48rpx;
  --avatar-size-md: 64rpx;
  --avatar-size-lg: 96rpx;
  --avatar-size-xl: 128rpx;

  /* ===== 组件尺寸 - 图标 ===== */
  --icon-size-sm: 32rpx;
  --icon-size-md: 40rpx;
  --icon-size-lg: 48rpx;

  /* ===== 组件尺寸 - 导航 ===== */
  --nav-bar-height: 88rpx;
  --tab-bar-height: 100rpx;
}
