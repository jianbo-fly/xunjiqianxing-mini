.xj-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
}

.xj-loading--vertical {
  flex-direction: column;
}

.xj-loading__spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--color-border, #e5e5e5);
  border-top-color: var(--color-primary, #1a73e8);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

.xj-loading--small .xj-loading__spinner {
  width: 28rpx;
  height: 28rpx;
  border-width: 3rpx;
}

.xj-loading--large .xj-loading__spinner {
  width: 56rpx;
  height: 56rpx;
  border-width: 5rpx;
}

.xj-loading__text {
  font-size: 28rpx;
  color: var(--color-text-secondary, #666);
}

.xj-loading--small .xj-loading__text {
  font-size: 24rpx;
}

.xj-loading--large .xj-loading__text {
  font-size: 32rpx;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
