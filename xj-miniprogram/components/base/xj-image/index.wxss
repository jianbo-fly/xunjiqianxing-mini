.xj-image {
  position: relative;
  display: block;
  overflow: hidden;
  background-color: var(--color-bg-gray);
}

.xj-image__img {
  width: 100%;
  height: 100%;
}

.xj-image__loading {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--color-bg-gray);
}

.xj-image__loading-icon {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--color-border);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: xj-image-spin 0.8s linear infinite;
}

@keyframes xj-image-spin {
  to {
    transform: rotate(360deg);
  }
}
